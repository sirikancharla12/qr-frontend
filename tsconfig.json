{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Use "ESNext" or "ES6" for ESM
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true, // Required for ESM compatibility
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react", "react-dom", "axios"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
